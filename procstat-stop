#!/bin/bash
exec >procstat-stop-stderrout.txt
exec 2>&1

echo "args: $@"
echo "hostname: `hostname`"

if [ -e procstat-pid.txt ]; then
    pid=`cat procstat-pid.txt`
    if [ -z "$pid" ]; then
        echo "PID for procstat not found"
        exit 1
    fi
    kill -s SIGTERM $pid
else
    echo "procstst-pid.txt not found"
    echo "PWD: `/bin/pwd`"
    echo "LS:"
    /bin/ls -l
    exit 1
fi
